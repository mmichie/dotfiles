# Ghostty Configuration

# Font settings
font-family = "Berkeley Mono UltraCondensed"
font-size = 15
font-thicken = true
# Alternative: font-family = "JetBrains Mono" with font-size = 14

# Window settings
window-padding-x = 0
window-padding-y = 0
# Alternative padding: window-padding-x = 10, window-padding-y = 10
window-decoration = true
window-theme = auto

# Colors - Simple black/white/green terminal theme
background = #000000
foreground = #ffffff

