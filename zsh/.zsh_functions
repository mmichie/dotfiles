        "$(gum style --foreground 99 "Ã—Ã¾ Cores      [ $cpu_cores ]")" \
        "$(gum style --foreground 99 "Ã—Ã¾ Load       [ $cpu_load ]")" \
        "$(gum style --foreground 99 "Ã—Ã¾ Memory     [ $memory_info ]")" \
