    # Clean up temporary files
    rm -f /tmp/cpu_info.$$ /tmp/memory_info.$$ /tmp/memory_usage.$$ /tmp/cpu_cores.$$ /tmp/cpu_load.$$ 2>/dev/null

    # Display system information with gathered values
    gum style \
        --width 70 \
